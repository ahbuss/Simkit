<!DOCTYPE SimkitModule PUBLIC '-//NPS Simkit//DTD Web Application//EN' 'simkit.dtd'>
<SimkitModule
    name="ArrivalProcessLite"
    version="0.1" >

    <Parameter name="interarrivalTime" type="simkit.random.RandomVariate" shortName="tA" />
    <State name="numberArrivals" type="int" shortName="N" />

    <Event name="Run" >
        <StateTransition state="numberArrivals" transition="0" />
        <Schedule event="Arrival" delay="interarrivalTime.generate()" />
    </Event>

    <Event name="Arrival" >
        <StateTransition state="numberArrivals" transition="numberArrivals+1" />
        <Schedule event="Arrival" delay="interarrivalTime.generate()" />
    </Event>
    
</SimkitModule>
