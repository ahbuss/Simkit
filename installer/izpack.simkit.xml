<installation version="1.0">
    
    <info>
        <appname>Simkit</appname>
        <appversion>"1.4.4"</appversion>
        <authors>
            <author name="Arnie Buss" email="abuss@nps.edu"/>
            <author name="John Ruck" email="jlruck@nps.edu" />
            <author name ="Kirk Stork" email="kirk@stork.name" />
        </authors>
        <url>http://diana.nps.edu/Simkit</url>
        <javaversion>1.7</javaversion>
    </info>
    
    <guiprefs height="500" width="600" resizable="no">
        
        <laf name="liquid">
            <os family="mac,unix,windows"/>
        </laf>
        
    </guiprefs>
    <variables>
        <variable name="DesktopShortcutCheckboxEnabled" value="false"/>
    </variables>
    <locale>
        <langpack iso3="eng"/>
    </locale>
    
    <resources>
        <res src="gnu/gpl.txt" id="LicencePanel.licence" />
<!--        <res src="stage/license/lgpl.txt" id="LicencePanel.licence"/>
	<res src="stage/Intro.html" id="HTMLInfoPanel.info"/>

        <res src="../installer/shortcutSpec.xml" id="shortcutSpec.xml"/>
        -->
        </resources>
    
    <panels>
        <panel classname="HelloPanel" id="hellopanel"/>
        <!-- 
        <panel classname="HTMLInfoPanel" id="infopanel" />
        -->
        <panel classname="LicencePanel" id="licensepanel"/><!--not my english-->
        <panel classname="PacksPanel" id="packspanel"/>
        <panel classname="TargetPanel" id="targetpanel"/>
        <panel classname="InstallPanel" id="installpanel"/>
        <!-- -->
        <panel classname="ShortcutPanel" id="shortcutpanel"/>
        <!-- -->
        <panel classname="SimpleFinishPanel" id="finishpanel"/>
    </panels>
    <listeners>
        <listener installer="SummaryLoggerInstallerListener"/>
    </listeners>
    <packs>
        <pack name="Simkit" required="yes">
            <description>Simkit Libraries Files</description>
            <fileset dir="../dist" targetdir="$INSTALL_PATH">
                <include name="lib/**/*" />
                <include name="gnu/**/*" />
                <include name="*.zip"/>
            </fileset>
        </pack>
        
        <pack name="Javadoc" required="no">
            <description>Simkit Javadocs</description>
            <fileset dir="." targetdir="$INSTALL_PATH">
                <include name="doc/**/*" />
            </fileset>
        </pack>
    </packs>
    <native type="izpack" name="ShellLink.dll"/>
    <native type="3rdparty" name="COIOSHelper.dll" stage="both">
        <os family="windows"/>
    </native>
</installation>
